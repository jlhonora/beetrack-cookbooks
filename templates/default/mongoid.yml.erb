<%= @rails_env %>:
  sessions:
    default:
      database: <%= node['mongo']['database'] %>
      hosts:
        - <%= "#{node['mongo']['host']:node['mongo']['port']}" %>
      options:
        read: primary
        max_retries   : <%= node['mongo'].has_key?('max_retries') ? node['mongo']['retries'] : 5 %>
        retry_interval: <%= node['mongo'].has_key?('retry_interval') ? node['mongo']['retries'] : 0 %>
        pool_size     : <%= node['mongo'].has_key?('pool_size') ? node['mongo']['retries'] : 64 %>

