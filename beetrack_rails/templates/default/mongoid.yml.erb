<%= node['rails_env'] %>:
  <%= node['mongoid'].keys.first %>:
    default:
      database: <%= node['mongoid']['clients']['default']['database'] %>
      hosts:
        - <%= "#{node['mongoid']['clients']['default']['hosts'][0]}" %>
      options:
        <% node['mongoid']['clients']['default']['options'].each do |option| %>
        <%= option[0] %>: <%= option[1] %>
        <% end %>
