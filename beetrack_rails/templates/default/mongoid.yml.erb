<%= node['rails_env'] %>:
  sessions:
    default:
      database: <%= node['mongoid']['clients']['default']['database'] %>
      hosts:
        - <%= "#{node['mongoid']['clients']['default']['hosts'][0]}" %>
      options:
        max_retries   : <%= node['mongoid']['clients']['default']['options'].has_key?('max_retries') ? node['mongoid']['clients']['default']['options']['max_retries'] : 5 %>
        retry_interval: <%= node['mongoid']['clients']['default']['options'].has_key?('retry_interval') ? node['mongoid']['clients']['default']['options']['retry_interval'] : 0 %>
        pool_size     : <%= node['mongoid']['clients']['default']['options'].has_key?('pool_size') ? node['mongoid']['clients']['default']['options']['pool_size'] : 64 %>

