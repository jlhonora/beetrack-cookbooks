<%= @rails_env %>:
  sessions:
    default:
      database: <%= node['mongoid']['database'] %>
      hosts:
        - <%= "#{node['mongoid']['host']}:#{node['mongoid']['port']}" %>
      options:
        read: primary
        max_retries   : <%= node['mongoid'].has_key?('max_retries') ? node['mongoid']['retries'] : 5 %>
        retry_interval: <%= node['mongoid'].has_key?('retry_interval') ? node['mongoid']['retries'] : 0 %>
        pool_size     : <%= node['mongoid'].has_key?('pool_size') ? node['mongoid']['retries'] : 64 %>

