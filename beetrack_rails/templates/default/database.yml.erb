<%= node['rails_env'] %>:
  adapter  : <%= node['database']['adapter'] || "mysql2" %>
  host     : <%= node['database']['host'] %>
  database : <%= node['database']['database'] %>
  username : <%= node['database']['username'] %>
  password : <%= node['database']['password'] %>
  encoding : <%= node['database'].has_key?('encoding') ? node['database']['encoding'] : 'utf8' %>
  collation : <%= node['database'].has_key?('collation') ? node['database']['collation'] : 'utf8_unicode_ci' %>
  reconnect: true
  pool: 48
  connect_timeout: 10
  read_timeout: 15
  write_timeout: 15
